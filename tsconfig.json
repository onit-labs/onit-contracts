{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"strict": false,
		"moduleResolution": "node",
		"noImplicitThis": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2015",
			"esnext.asynciterable"
		],
		"sourceMap": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"./script",
		"./test"
	]
}